<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateToDoerActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Enter a ToDo..."
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>
    <CheckBox
            android:text="Important!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ImportantCheckbox"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/editText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="296dp"
            android:layout_marginRight="296dp"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton" app:layout_constraintStart_toStartOf="@+id/ImportantCheckbox"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ImportantCheckbox"/>
</android.support.constraint.ConstraintLayout>